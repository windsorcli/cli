{
  "extends": [
    "config:recommended",
    "github>aquaproj/aqua-renovate-config#2.2.1"
  ],
  "packageRules": [
    {
      "description": "Pin GitHub Actions to specific commit SHAs",
      "matchManagers": [
        "github-actions"
      ],
      "versioning": "github-tags",
      "pinDigests": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "matchPackageNames": [
        "/.*/"
      ]
    },
    {
      "description": "Update Go modules",
      "matchManagers": [
        "gomod"
      ],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Update Taskfile dependencies",
      "matchFileNames": [
        "Taskfile.yaml"
      ],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Update aqua.yaml dependencies",
      "matchFileNames": ["aqua.yaml"],
      "managers": ["aqua"],
      "labels": ["aqua", "dependencies"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ],
  "platformAutomerge": true,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^pkg/constants/constants.go$"
      ],
      "matchStrings": [
        "// renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\n\\s*const\\s+\\S+\\s*=\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "{{datasource}}",
      "versioningTemplate": "semver",
      "automerge": true, 
      "automergeType": "pr", 
      "automergeStrategy": "squash" 
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^Taskfile.yaml$"
      ],
      "matchStrings": [
        "go install (?<depName>\\S+)@(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "go",
      "versioningTemplate": "semver",
      "automerge": true, 
      "automergeType": "pr", 
      "automergeStrategy": "squash" 
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^Taskfile.yaml$"
      ],
      "matchStrings": [
        "choco install (?<depName>\\S+) --version=(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "chocolatey",
      "versioningTemplate": "semver",
      "automerge": true, 
      "automergeType": "pr", 
      "automergeStrategy": "squash" 

    }
  ],
  "labels": [
    "dependencies"
  ]
}
