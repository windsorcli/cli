{
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Launch Package",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${fileDirname}"
    },
    {
        "name": "Windsor Env",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/windsor/main.go",
        "args": ["env", "--verbose"],
        "env": {
          "WINDSOR_SESSION_TOKEN": "local"
        }
    },
    {
      "name": "Windsor Init",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/windsor/main.go",
      "args": ["init", "local"]
    },
    {
      "name": "Windsor Up",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/windsor/main.go",
      "args": ["up", "--verbose"],
      "env": {
        "COMPOSE_FILE": "${workspaceFolder}/.windsor/docker-compose.yaml",
        "WINDSOR_CONTEXT": "local",
        "WINDSOR_PROJECT_ROOT": "${workspaceFolder}"
      }
    },
    {
      "name": "Windsor Down",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/windsor/main.go",
      "args": ["down", "--verbose"],
      "env": {
        "COMPOSE_FILE": "${workspaceFolder}/.windsor/docker-compose.yaml",
        "WINDSOR_CONTEXT": "local",
        "WINDSOR_PROJECT_ROOT": "${workspaceFolder}"
      }
    },
    {
      "name": "Windsor Install",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/windsor/main.go",
      "args": ["install", "--verbose"],
      "env": {
        "COMPOSE_FILE": "${workspaceFolder}/.windsor/docker-compose.yaml",
        "WINDSOR_CONTEXT": "local",
        "WINDSOR_PROJECT_ROOT": "${workspaceFolder}",
        "KUBECONFIG": "${workspaceFolder}/contexts/local/.kube/config"
      }
    },
    {
      "name": "Windsor Check",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/windsor/main.go",
      "args": ["check"],
      "env": {
        "WINDSOR_CONTEXT": "local",
        "WINDSOR_PROJECT_ROOT": "${workspaceFolder}"
      }
    },
    {
      "name": "Windsor Context Set",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/windsor/main.go",
      "args": ["context", "set", "local"],
      "env": {
        "WINDSOR_SESSION_TOKEN": "local",
      }
    }
  ]
}
